#!/bin/bash

dotfiles_dir="$HOME/.dotfiles"
dotfiles_dirty_file="$HOME/.dotfiles_dirty"
dotfiles_checksum_file="$dotfiles_dir/.dotfiles.md5"
 
command="$1"
parameter="$2"

function repositoryPull() {
  pushd "$dotfiles_dir" > /dev/null
  git pull -q origin master
  git submodule update -q --recursive
  popd > /dev/null
}

function repositoryCheck() {
  pushd "$dotfiles_dir" > /dev/null
  git remote update > /dev/null 2>&1
  status=$(git status --porcelain --branch | head -n 1 | grep behind)
  popd > /dev/null
  if [ "$status" == "" ]; then
    return 0
  else
    return 1
  fi
}

function repositoryPush() {
  comment="$1"
  if [ "$comment" == "" ]; then
    comment="Dotfile updates from $HOSTNAME"
  fi
  pushd "$dotfiles_dir" > /dev/null
  for submodule in $(grep path .gitmodules | sed 's/.*= //'); do
    pushd "$submodule" > /dev/null
    git add -A .
    status=$(git status --porcelain)
    if [ "$status" != "" ]; then
      git commit -m "$comment"
      git push
    fi
    popd > /dev/null
    git add "$submodule"
  done
  git add -A .
  status=$(git status --porcelain)
  if [ "$status" != "" ]; then
    git commit -m "$comment"
    git push
  fi
  popd > /dev/null
}

function readPassword() {
  stty -echo
  read -p "Password: " password; echo
  stty echo
}

function calculateChecksum() {
  pushd "$dotfiles_dir" > /dev/null
  checksums=$(
    find . ! -path "*/.git*" -type f ! -name ".DS_Store" \
    ! -name ".dotfiles.md5" ! -name "README.md" -print0 | xargs -0 -I % \
    shasum -b -a 256 "%" | sort)
  export checksum=$(echo "$password$checksums" | shasum -b -a 256 | awk '{print $1}')
  popd > /dev/null
}

function isUpdated() {
  if [[ ! -f "$HOME$1" ]]; then
    return 1
  elif [[ "$HOME$1" -ot "$dotfiles_dir$1"  
       || "$HOME$1" -nt "$dotfiles_dir$1" ]]; then
    return 1
  fi
  return 0
}

function diffFiles() {
  result=$(
    find "$dotfiles_dir" ! -path "*/.git*" -type f ! -name ".DS_Store" \
    ! -name ".dotfiles.md5" ! -name "README.md" -print0 | sort -z | {
      while read -d $'\0' file; do
        file="${file:${#dotfiles_dir}}"
        isUpdated $file
        if [[ "$?" != "0" ]]; then
          if [ "$1" == "true" ]; then
            if [[ ! -f "$HOME$file" ]]; then
              echo "Missing file: $file" >&2
            else
              diff "$HOME$file" "$dotfiles_dir$file" >&2
            fi
          else
            diff -q -N "$HOME$file" "$dotfiles_dir$file" > /dev/null 2>&1
          fi
          if [ "$?" != "0" ]; then
            echo 1
          fi
        fi
      done
    }
  )
  if [ "$result" != "" ]; then
    return 1
  else
    return 0
  fi
}

function addFile() {
  file=$(abspath "$1")
  if [ "${file:0:${#HOME}}" != "$HOME" ]; then
    echo "File not in home directory: $file"
    return
  fi
  if [ ! -f "$file" ]; then
    echo "File not found: $file"
    return
  fi
  file="${file:(${#HOME}+1)}"
  if [ -f "$dotfiles_dir/$file" ]; then
    echo "File already exists: $file"
    return
  fi
  echo "Adding $file"
  directory=$(dirname "$dotfiles_dir/$file")
  mkdir -p "$directory" 2> /dev/null
  cp -p "$HOME/$file" "$dotfiles_dir/$file"
}

function deleteFile() {
  file=$(abspath "$1")
  if [ "${file:0:${#HOME}}" != "$HOME" ]; then
    echo "File not in home directory: $file"
    return
  fi
  file="${file:(${#HOME}+1)}"
  if [ ! -f "$dotfiles_dir/$file" ]; then
    echo "File not found: $file"
    return
  fi
  echo "Deleting $file"
  rm "$dotfiles_dir/$file"
}

function commitFiles() {
  find "$dotfiles_dir" ! -path "*/.git*" -type f ! -name ".DS_Store" ! -name ".dotfiles.md5" ! -name "README.md" -print0 | sort -z | while read -d $'\0' file; do
    file="${file:${#dotfiles_dir}}"
    isUpdated $file
    if [[ "$?" != "0" ]]; then
      echo "Committing file $file"
      cp -p "$HOME$file" "$dotfiles_dir$file"
    fi
  done
}

function updateFiles() {
  find "$dotfiles_dir" ! -path "*/.git*" -type f ! -name ".DS_Store" ! -name ".dotfiles.md5" ! -name "README.md" -print0 | sort -z | while read -d $'\0' file; do
    file="${file:${#dotfiles_dir}}"
    isUpdated $file
    if [[ "$?" != "0" ]]; then
      echo "Updating $file"
      rm -f "$HOME$file"
      directory=$(dirname "$HOME$file")
      mkdir -p "$directory" 2> /dev/null
      cp -p "$dotfiles_dir$file" "$HOME$file"
    fi
  done
}

function updateChecksum() {
  calculateChecksum
  echo "$checksum" > "$dotfiles_checksum_file"
}

function getDotfilesChecksum() {
  dotfiles_checksum=$(cat "$dotfiles_checksum_file")
}

function verifyChecksum() {
  calculateChecksum
  getDotfilesChecksum
  if [ "$checksum" != "$dotfiles_checksum" ]; then
    echo "*** CHECKSUM VERIFICATION FAILED ***"
    exit 1
  fi
}

rm -f $dotfiles_dirty_file
if [ ! -d "$dotfiles_dir" ]; then
  echo "Initializing dotfiles. Enter password or press Ctrl-C to abort now!"
  readPassword
  mkdir -p "$dotfiles_dir"
  pushd "$dotfiles_dir" > /dev/null
  git clone git@github.com:bjornhusberg/dotfiles.git .
  git submodule update --init --recursive
  popd > /dev/null
  verifyChecksum
  updateFiles
elif [ "$command" = "pull" ]; then
  diffFiles "true"
  if [ "$?" != "0" ]; then
    echo "Dotfiles contain local changes."
    exit
  fi
  echo "Overwriting local dotfiles. Enter password or press Ctrl-C to abort now!"
  readPassword
  verifyChecksum
  repositoryPull
  diffFiles "true"
  verifyChecksum
  updateFiles
elif [ "$command" = "push" ]; then
  diffFiles "true"
  if [ "$?" == "0" ]; then
    echo "Nothing to do."
    exit
  fi
  repositoryCheck
  if [ "$?" != "0" ]; then
    echo "Dotfiles need to be merged."
    exit
  fi
  echo "Pushing dotfiles. Enter password or press Ctrl-C to abort now!"
  readPassword
  verifyChecksum
  commitFiles
  updateChecksum
  repositoryPush "$parameter"
elif [ "$command" = "add" ]; then
  echo "Adding dotfile: $parameter. Enter password or press Ctrl-C to abort now!"
  readPassword
  verifyChecksum
  addFile "$parameter"
  updateChecksum
elif [ "$command" = "rm" ]; then
  echo "Deleting dotfile: $parameter. Enter password or press Ctrl-C to abort now!"
  readPassword
  verifyChecksum
  deleteFile "$parameter"
  updateChecksum
elif [ "$command" = "checksum" ]; then
  echo "Updating dotfiles checksum. Enter password or press Ctrl-C to abort now!"
  readPassword
  updateChecksum
elif [ "$command" = "diff" ]; then
  diffFiles "true"
elif [  "$command" = "" ]; then
  diffFiles "false"
  if [ "$?" != "0" ]; then
    echo "Dotfiles need to be pushed!"
    touch $dotfiles_dirty_file
    exit
  fi
  repositoryCheck
  if [ "$?" != "0" ]; then
    echo "Dotfiles need to be pulled!"
    touch $dotfiles_dirty_file
    exit
  fi
else
  echo "Usage: $0 [diff|pull|push|add|rm|checksum] files ..."
  exit 1
fi


