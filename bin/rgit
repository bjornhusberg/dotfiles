#!/bin/bash

function doGit() {
  pushd . > /dev/null
  cd "${repo%%/.git}"
  shift
  git $@ > .git/rgit.log 2>&1
  popd > /dev/null
}

repos=$(find . -type d -name ".git")

for repo in $repos; do
  # Limit number of parallell threads to unchoke github
  while [ $(jobs -r | grep doGit | wc -l) -gt 7 ]; do
    sleep 0.1
  done

  doGit $repo $@ &
done

wait

for repo in $repos; do
  echo -e "\n${repo%%/.git}:"
  cat "$repo/rgit.log"
  rm "$repo/rgit.log"
done
